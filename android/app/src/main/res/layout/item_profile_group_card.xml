<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/sessions_surface"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/sessions_card_stroke"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_profile_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/sessions_text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/group_session_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sessions_text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/group_profile_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/sessions_text_muted"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/group_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="4dp"
            android:textColor="@color/sessions_error"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/group_empty_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="4dp"
            android:textColor="@color/sessions_text_muted"
            android:textSize="13sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/group_sessions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
